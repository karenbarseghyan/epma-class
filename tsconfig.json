{
    "compilerOptions": {
      "experimentalDecorators": true,
      "allowJs": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build",
      "resolveJsonModule":true,
      "strict": true,
      "strictNullChecks": true,
      "target": "es6",
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["*/.test.ts", "*/.test.js", "node_modules"]
}